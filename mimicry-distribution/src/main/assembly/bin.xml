<assembly>
	<id>bin</id>

	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>target/classes</directory>
			<includes>
				<include>*.properties</include>
				<include>*.sh</include>
				<include>*.bat</include>
				<include>*.xml</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<outputDirectory>/lib</outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>LICENSES/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>THIRD-PARTY-LICENSES.txt</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>target/</directory>
			<includes>
				<include>Mimicry.pdf</include>
			</includes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.mimicry:core</include>
				<include>org.mimicry:bridge</include>
				<include>org.mimicry:aspects</include>
				<include>org.mimicry:mimicry-standalone</include>
				<include>org.mimicry:mimicry-ui</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>org.mimicry</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/plugins</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.mimicry:plugin-core</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
